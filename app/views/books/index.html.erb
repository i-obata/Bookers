<!DOCTYPE html>
<html>
    <body>
        <h1>Books</h1>
        <% @books.each do |book| %>
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Body</th>
                        <th colspan = "3"></th>
                    </tr>
                </thead>
            </table>
        <% end %>
        <h2>New book</h2>
        <%= form_with model: @book, url: '/books/show', method: :post do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            
            <h4>Body</h4>
            <%= f.text_area :body %>
            
            <div></div>
            <%= f.submit 'Create Book' %>
        <% end %>
    </body>
</html>