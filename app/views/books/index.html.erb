<!DOCTYPE html>
<html>
    <body>
        <div class="successfully-massage"><%= flash[:notice] %></div>
        <h1>Books</h1>
        <table>
            <% if @books.present? %>
                <thead>
                    <tr>
                        <th class="table-title">Title</th>
                        <th class="table-body">Body</th>
                        <th colspan = "3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td class="table-title"><%= book.title %></td>
                            <td class="table-body"><%= book.body %></td>
                            <td class="table-link"><%= link_to "Show","/books/#{book.id}" %></td>
                            <td class="table-link"><%= link_to "Edit","/books/#{book.id}/edit" %></td>
                            <td class="table-link"><%= link_to "Destroy","/books/#{book.id}", method: :delete, "data-confirm" => "Do you really want to delete it?" %></td>
                        <tr>
                    <% end %>
                </tbody>
            <% end %>
        </table>
        <h2>New book</h2>
        <% if @book.errors.any? %>
            <div class="error-box">
                <h4 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved;</h4>
                <ul class="error-message">
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        
        <%= form_with model: @book do |f| %>
            <h4 class="new-book-label">Title</h4>
            <%= f.text_field :title %>
            
            <h4 class="new-book-label">Body</h4>
            <%= f.text_area :body %>
            
            <div></div>
            <%= f.submit 'Create Book' %>
        <% end %>
    </body>
</html>