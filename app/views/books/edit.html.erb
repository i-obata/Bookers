<html>
    <body>
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
            <div class="error-box">
                <h4 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved;</h4>
                <ul class="error-message">
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        
        <%= form_with model: @book do |f| %>
            
            <p class="edit-book-label"><strong>Title</strong></p>
            <%= f.text_field :title %>
            
            <p class="edit-book-label"><strong>Body</strong></p>
            <%= f.text_area :body %>
            
            <div></div>
            <%= f.submit 'Update Book' %>
        
            <p><%= link_to "Show","/books/#{@book.id}" %>ï½œ<%= link_to "Back","/books" %></p>
        <% end %>
    </body>    
</html>
